---
type Props = {
  href: string;
  text: string;
};
const { href, text } = Astro.props;
---

<a
  href={href}
  target="_blank"
  class="bg-ps-geren block hover:shadow-none hover:translate-x-[2px] text-xl transition-all duration-300 px-6 py-2.5 rounded-2xl border-3 shadow-[2px_3px_0_rgba(0,0,0,1)]"
  >{text}</a
>
